<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Wesnick\Workflow\Controller\DefaultTransitionController" public="true">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
        </service>
        <service id="Wesnick\Workflow\EventListener\SubjectValidatorListener">
            <argument type="service" id="validator"/>
        </service>
        <service id="Wesnick\Workflow\Metadata\WorkflowActionsResourceMetadataFactory" decorates="api_platform.metadata.resource.metadata_factory">
            <argument type="service" id="Wesnick\Workflow\Metadata\WorkflowActionsResourceMetadataFactory.inner"/>
        </service>
        <service id="Wesnick\Workflow\Serializer\WorkflowActionContextBuilder" decorates="api_platform.serializer.context_builder">
            <argument type="service" id="Wesnick\Workflow\Serializer\WorkflowActionContextBuilder.inner"/>
        </service>
        <service id="Wesnick\Workflow\Serializer\WorkflowActionNormalizer">
            <argument type="service" id="serializer.normalizer.object"/>
            <tag name="serializer.normalizer" prority="65"/>
        </service>

        <service id="Wesnick\Workflow\EventListener\WorkflowOperationListener">
            <tag name="kernel.event_listener" event="kernel.request" priority="3" method="onKernelRequest"/>
        </service>

        <service id="Wesnick\Workflow\Serializer\ActionsDocumentationNormalizer">
            <argument type="service" id="api_platform.hydra.normalizer.documentation"/>
        </service>

        <service id="Wesnick\Workflow\Serializer\WorkflowNormalizer">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument type="service" id="api_platform.jsonld.normalizer.item"/>
            <argument type="service" id="serializer.normalizer.object"/>
            <tag name="serializer.normalizer" prority="64"/>
        </service>

        <service id="Wesnick\Workflow\Transformer\WorkflowDtoTransformer">
            <tag name="api_platform.data_transformer"/>
        </service>

        <service id="Wesnick\Workflow\WorkflowManager">
            <argument type="service" id="workflow.registry"/>
            <argument type="service" id="api_platform.iri_converter"/>
            <argument type="collection"/>  <!-- compiler pass -->
        </service>

    </services>
</container>

