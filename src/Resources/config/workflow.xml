<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Wesnick\Workflow\Metadata\Listener\DefaultTransitionApplyListener">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
        </service>
        <service class="Wesnick\Workflow\Metadata\PotentialActionPropertyMetadataFactory" decorates="api_platform.metadata.property.metadata_factory">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument type="service" id="Wesnick\Workflow\Metadata\PotentialActionPropertyMetadataFactory.inner"/>
        </service>
        <service class="Wesnick\Workflow\Metadata\WorkflowActionsResourceMetadataFactory" decorates="api_platform.metadata.resource.metadata_factory">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument type="service" id="Wesnick\Workflow\Metadata\WorkflowActionsResourceMetadataFactory.inner"/>
        </service>
        <service class="Wesnick\Workflow\Serializer\WorkflowActionContextBuilder" decorates="api_platform.serializer.context_builder">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument type="service" id="Wesnick\Workflow\Serializer\WorkflowActionContextBuilder.inner"/>
        </service>
        <service class="Wesnick\Workflow\PathResolver\WorkflowActionPathResolver" decorates="api_platform.operation_path_resolver.generator">
            <argument type="service" id="Wesnick\Workflow\PathResolver\WorkflowActionPathResolver.inner"/>
        </service>

        <service id="Wesnick\Workflow\Serializer\WorkflowActionNormalizer">
            <argument id="serializer.normalizer.object"/>
            <tag name="serializer.normalizer" prority="65"/>
        </service>

        <service id="Wesnick\Workflow\Serializer\ActionsDocumentationNormalizer">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument type="service" id="api_platform.hydra.normalizer.documentation"/>
        </service>

        <service id="Wesnick\Workflow\Serializer\WorkflowNormalizer">
            <argument type="service" id="Wesnick\Workflow\WorkflowManager"/>
            <argument id="api_platform.jsonld.normalizer.item"/>
            <argument id="serializer.normalizer.object"/>
            <tag name="serializer.normalizer" prority="64"/>
        </service>

        <service class="Wesnick\Workflow\Transformer\DtoTransformer">
            <tag name="api_platform.data_transformer"/>
        </service>

        <service class="Wesnick\Workflow\WorkflowManager">
            <argument id="workflow.registry"/>
            <argument id="router"/>
            <argument/>  <!-- compiler pass -->
            <argument id="property_accessor"/>
        </service>

    </services>
</container>

